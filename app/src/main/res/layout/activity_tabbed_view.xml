<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/top_banner"
           android:background="@drawable/top_banner"
           android:contentDescription="Top Banner"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:background="@drawable/logo"
            android:layout_alignRight="@id/top_banner"
            android:layout_alignEnd="@id/top_banner"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_icon"
            android:background="@drawable/hamburger_icon"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>
        <TabWidget android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_banner" />
        <FrameLayout android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@android:id/tabs">
            <include android:id="@+id/tab1"
                layout="@layout/activity_personal_info"
                />
            <include android:id="@+id/tab2"
                layout="@layout/activity_selector_page"
                />
            <include android:id="@+id/tab3"
                layout="@layout/activity_email"
                />
        </FrameLayout>
    </RelativeLayout>
</TabHost>